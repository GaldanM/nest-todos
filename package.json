{
  "name": "todos",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "author": "GaldanM",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "NODE_ENV=dev nest start --debug --watch",
    "start:prod": "NODE_ENV=prod node dist/main",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:cov": "NODE_ENV=test vitest run --coverage",
    "test:debug": "NODE_ENV=test vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "NODE_ENV=test npx cucumber-js",
    "migration:generate": "typeorm-ts-node-esm migration:generate ./src/todo/infrastructure/database/postgres/migrations/$MIGRATION_NAME -d ./src/todo/infrastructure/database/postgres/datasource.ts",
    "migration:show": "typeorm-ts-node-esm migration:show -d ./src/todo/infrastructure/database/postgres/datasource.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d ./src/todo/infrastructure/database/postgres/datasource.ts"
  },
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/typeorm": "^10.0.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.2",
    "@cucumber/cucumber": "^10.8.0",
    "@cucumber/messages": "^25.0.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@nestjs/testing": "^10.3.9",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.6.3",
    "@swc/helpers": "^0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.7",
    "@vitest/coverage-v8": "^1.6.0",
    "earl": "^1.3.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "unplugin-swc": "^1.4.5",
    "vitest": "^1.6.0"
  },
  "packageManager": "yarn@4.3.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "engineStrict": true,
  "private": true
}
